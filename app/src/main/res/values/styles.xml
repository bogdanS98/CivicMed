<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/material_deep_purple_a200</item>
        <item name="colorButtonNormal">@color/material_deep_purple_a200</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_canteen</item>
        <item name="colorPrimaryDark">@color/color_dark_canteen</item>
        <item name="colorAccent">@color/material_deep_purple_a200</item>
        <item name="colorButtonNormal">@color/material_deep_purple_a200</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ReportTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Used for: input field background -->
        <item name="colorPrimary">@color/material_deep_purple_a200</item>

        <!-- Used for: form progress color, status bar color (API 21+) -->
        <item name="colorPrimaryDark">@color/material_indigo_500</item>

        <!-- Used for: title text color, error text color -->
        <item name="android:textColorPrimary">@color/material_indigo_700</item>

        <!-- Used for: details text color, step indicator text color -->
        <item name="android:textColorSecondary">@color/material_black_54</item>

        <!-- Used for: input text color, input widget color -->
        <item name="android:textColorPrimaryInverse">@color/material_white_87</item>

        <!-- Used for: input widget color -->
        <item name="android:textColorSecondaryInverse">@color/material_white_87</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>